<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo"
    android:background="#D3E4EA">

    <EditText
        android:id="@+id/nameEntry"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="95dp"
        android:autofillHints=""
        android:hint="Enter name"
        android:inputType="textCapSentences"
        android:background="@drawable/bp_background_shape"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/ageEntry"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="45dp"
        android:autofillHints=""
        android:hint="Enter age"
        android:inputType="number"
        android:background="@drawable/bp_background_shape"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEntry"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/weightEntry"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="45dp"
        android:autofillHints=""
        android:hint="Enter weight"
        android:inputType="number"
        android:background="@drawable/bp_background_shape"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageEntry"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/heightEntry"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="45dp"
        android:autofillHints=""
        android:hint="Enter height (cm)"
        android:inputType="number"
        android:background="@drawable/bp_background_shape"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightEntry"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="54dp"
        android:backgroundTint="#009FE3"
        android:gravity="center"
        android:text="save"
        android:textSize="15sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightEntry"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="54dp"
        android:backgroundTint="#009FE3"
        android:gravity="center"
        android:text="show info"
        android:textSize="15sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toEndOf="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/heightEntry"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearBtn"
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#009FE3"
        android:gravity="center"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save" />

</androidx.constraintlayout.widget.ConstraintLayout>