<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="162dp"
        android:text="User info:"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/info_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="63dp"
        android:text="Blood Pressure:"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/bp_image"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#009FE3"
        android:text="Add"
        android:textSize="13sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_info"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="65dp"
        android:text="Heart Rate:"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/hr_image"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:textStyle="bold"
        android:text="Allergies:"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/allergy_image"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="72dp"
        android:text="Medications:"
        android:textStyle="bold"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/medicine_image"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#009FE3"
        android:text="Add"
        android:textSize="13sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#009FE3"
        android:text="Add"
        android:textSize="13sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bp"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#009FE3"
        android:text="Add"
        android:textSize="13sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hr"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#009FE3"
        android:text="Add"
        android:textSize="13sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allergy"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_info"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bp_image"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/hr_image"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bp_image"
        app:srcCompat="@drawable/heart_rate"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/allergy_image"
        android:layout_width="74dp"
        android:layout_height="81dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hr_image"
        app:srcCompat="@drawable/allergy"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allergy_image"
        app:srcCompat="@drawable/medicine"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fact"
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#009FE3"
        android:textSize="17sp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_baseline_question_mark_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>